.page {
  background-color: white;
}
/* 一个条件包裹的内容样式 */
.condition {
  margin-top: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
/* 筛选条件的样式 */
.head {
  display: flex;
  margin-bottom: 20rpx;
}
/* 点 */
.point {
  height: 26rpx;
  width: 26rpx;
  border-radius: 13rpx;
  background-color: rgb(29, 178, 236);
  margin-right: 20rpx;
  margin-top: 5rpx;
}
/* 圆点颜色样式 */
.condition-state {
  background-color: rgb(29, 178, 236);
}
.condition-type {
  background-color: rgb(6, 209, 50);
}
.condition-organ {
  background-color: red;
}
/* 筛选名字样式 */
.search-condition {
  font-size: small;
}
/* 筛选内容的样式 */
.weui-flex__item {
  margin: 5rpx 10rpx;
}
.placeholder{
  margin:5px;
  padding:10rpx 10px;
  text-align:center;
  background-color:var(--weui-BG-1);
  height:2.3em;
  line-height:2.3em;
  color:var(--weui-FG-1);
  margin-left: 5rpx;
  border-radius: 20rpx;
}
.select-state {
  background-color: rgb(152, 237, 252);
  color: rgb(29, 178, 236);
}
.select-type {
  background-color: rgb(170, 248, 187);
  color:rgb(6, 209, 50);
}
.select-organ {
  background-color: rgb(253, 179, 179);
  color: red;
}
/* 底部按钮样式 */
.weui-tab {
  margin-top: 130rpx;
}
.weui-btn {
  width: 100%;
  padding: 25rpx 0rpx;
  background-color: #1296db;
}