/* 不加班的时候不显示 */
.point {
  height: 10rpx;
  width: 10rpx;
  border-radius: 5rpx;
  margin-left: auto;
  margin-right: auto;
}
/* 加班的时候点为绿色样式 */
.overtime .point {
  background-color: rgb(0, 255, 0);
}
/* 上拉，下拉图标样式 */
.up-down {
  text-align: center;
  border-top: 1rpx solid rgb(223, 218, 218);
  background-color: white;
  /* padding-top: 15rpx; */
}
.up-down image {
  width: 50rpx;
  height: 20rpx;
}
/* 签到记录样式 */
.weui-cells__title {
  color: #5cb85c;
  font-size: 32rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  margin: 0;
}
/* 签到记录有右边选中日期的样式，右浮动 */
.weui-cells__title text {
  border-left: 10rpx solid #5cb85c;
  padding-left: 30rpx;
}
